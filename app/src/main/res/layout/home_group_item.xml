<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="300dp">    <TextView        android:id="@+id/home_title"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginHorizontal="16dp"        android:layout_marginVertical="4dp"        android:fontFamily="sans-serif-black"        android:textColor="@color/title_color"        android:textSize="20sp"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <androidx.recyclerview.widget.RecyclerView        android:layout_width="match_parent"        android:layout_marginTop="8dp"        android:layout_height="0dp"        android:id="@+id/movie_list"        android:layout_marginVertical="4dp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintTop_toBottomOf="@id/home_all" />    <TextView        android:id="@+id/home_all"        android:background="@drawable/all_button_back"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="10dp"        android:layout_marginVertical="4dp"        android:fontFamily="sans-serif-black"        android:text="All "        android:clickable="true"        android:focusable="true"        android:textColor="@color/button_text_color"        android:textSize="16sp"        android:paddingHorizontal="16dp"        android:paddingVertical="4dp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toTopOf="parent" /></androidx.constraintlayout.widget.ConstraintLayout>